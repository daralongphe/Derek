#include <string>
#include <iostream>
using namespace std;
int main()
{
  //Program Header
  cout << "Student Grading System (SGS)" << endl;
  cout << "Long Beach City College" << endl;
  cout << "Author: Chandaralong" << endl;
  cout << "Mar. 10, 2020" << endl;
  
  //Declare and Initialize variables with appropriate types
  int ID;
  string firstname;
  string lastname;
  double CS11;
  double CS12;
  double CS22;
  
  //Prompt the user for input
  cout << "Please Enter your student ID number." << endl;
  cin >> ID;
  cout << "Please Enter your First Name." << endl;
  cin >> firstname;
  cout << "Please Enter your Last Name." << endl;
  cin >> lastname;
  cout << "Please Enter your CS 11 score." << endl;
  cin >> CS11;
  cout << "Please Enter your CS12 score." << endl;
  cin >> CS12;
  cout << "Please Enter your CS22 score." << endl;
  cin >> CS22; 
  
  //Calculations
  double total = CS11+CS12+CS22;
  double avg = total/3;
  
  //Output the info to console
  cout << "ID: " << ID << endl;
  cout << "First name: " << firstname << endl;
  cout << "Last name: " << lastname << endl;
  cout << "Total: " << total << endl;
  cout << "Average: " << avg << endl;
  
  //Determine the lettergrade and comments
  if (avg >= 90 && avg <= 100 )
  {
    cout << "Letter Grade: A\nCongratulation! You did a good good. Please Keep up your great work." << endl;
  }
  else if (avg >= 80 && avg < 90 )
  {
    cout << "Letter Grade: B" << endl;
  }
  else if (avg >= 70 && avg < 80 )
  {
    cout << "Letter Grade: C" << endl;
  }
  else if (avg >= 60 && avg < 70 )
  {
    cout << "Letter Grade: D" << endl;
  }
  else if (avg >= 0 && avg < 60 )
  {
    cout << "Letter Grade: F\nYou fail, please work harder and try again." << endl;
  }
  else 
  {
    cout << "Please Enter valid grade between 0-100" << endl;
  }
  return 0;
}
